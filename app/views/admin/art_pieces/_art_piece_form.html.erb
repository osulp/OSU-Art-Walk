<%= simple_form_for([:admin, @art_piece], html: {class: 'form-horizontal'}) do |f| %>
    <%= f.input :title %>
    <%= f.input :medium %>
    <%= f.input :creation_date %>
    <%= f.input :size %>
    <%= f.input :legal_info %>
    <%= f.input :private %>
    <%= f.input :contact_info %>
    <%= f.input :description %>
    <%= f.input :displayed %>
      <%= f.fields_for :art_piece_photos do |builder| %>
        <%= render :partial => "photo_form", :locals => {f: builder} %>
      <% end %>
    <%= link_to_add_fields "Add Another Photo", f, :art_piece_photos%>
    <%= f.button :submit %>
<% end %>
