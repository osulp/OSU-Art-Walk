<%= simple_form_for([:admin, @art_piece], :html => {:class => 'form-horizontal'}) do |f| %>
    <%= f.input :title %>
    <%= f.input :creation_date %>
    <%= f.input :size %>
    <%= f.input :legal_info %>
    <%= f.input :private %>
    <%= f.input :contact_info %>
    <%= f.input :description %>
    <%= f.input :artist_comments %>
    <%= f.input :displayed %>
    <%= f.input :number %>
    <%= f.input :series %>
    <%= f.input :percent_for_art %>
    <%= f.association :medium, :label_method => :medium %>
    <%= f.association :artists %>
    <%= f.association :collections %>
    <%= f.fields_for :art_piece_building do |builder| %>
      <%= builder.input :building_id, :collection => Building.all, :label => "Building" %>
      <%= builder.input :location, :label => "Location" %>
      <%= builder.input :position_num, :label => "Position Number" %>
      <%= builder.input :art_piece_id, :as => :hidden %>
    <% end %>
    <%= f.simple_fields_for :art_piece_photos do |builder| %>
      <%= render :partial => "photo_form", :locals => {f: builder} %>
    <% end %>
    <%= link_to_add_fields "Add Another Photo", f, :art_piece_photos%>
    <%= f.button :submit %>
<% end %>
