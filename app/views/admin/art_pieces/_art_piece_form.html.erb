<%= simple_form_for([:admin, @art_piece], html: {class: 'form-horizontal'}) do |f| %>
    <%= f.input :title %>
    <%= f.input :medium %>
    <%= f.input :creation_date %>
    <%= f.input :size %>
    <%= f.input :legal_info %>
    <%= f.input :is_temporary %>
    <%= f.input :temporary_until %>
    <%= f.input :private %>
    <%= f.input :contact_info %>
    <%= f.input :description %>
